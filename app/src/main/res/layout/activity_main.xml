<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/informationTv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="16dp"
        android:background="#8F76FD00"
        android:text="    فرم ثبت اطلاعات "
        android:textColor="#66BB6A"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="TextContrastCheck" />

    <EditText
        android:id="@+id/fullName_ET"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="12dp"
        android:layout_marginEnd="16dp"
        android:ems="10"
        android:hint="نام و نام خانوادگی "
        android:background="@drawable/border"
        android:inputType="textPersonName"
        android:padding="8dp"
        android:textColorHighlight="#F06292"
        app:layout_constraintEnd_toEndOf="@+id/informationTv"
        app:layout_constraintStart_toStartOf="@+id/informationTv"
        app:layout_constraintTop_toBottomOf="@+id/informationTv"
        tools:ignore="TouchTargetSizeCheck" />

    <EditText
        android:id="@+id/NationalCode_ET"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginTop="12dp"
        android:background="@drawable/border"
        android:ems="10"
        android:hint="کد ملی "
        android:inputType="number"
        android:padding="8dp"
        android:textColorHighlight="#F06292"
        app:layout_constraintEnd_toEndOf="@+id/fullName_ET"
        app:layout_constraintStart_toStartOf="@+id/fullName_ET"
        app:layout_constraintTop_toBottomOf="@+id/fullName_ET"
        tools:ignore="TouchTargetSizeCheck" />

    <EditText
        android:id="@+id/placeOfBirth_ET"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/border"
        android:ems="10"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginTop="12dp"
        android:hint="محل تولد "
        android:inputType="textPersonName"
        android:padding="8dp"
        android:textColorHighlight="#F06292"
        app:layout_constraintEnd_toEndOf="@+id/NationalCode_ET"
        app:layout_constraintStart_toStartOf="@+id/NationalCode_ET"
        app:layout_constraintTop_toBottomOf="@+id/NationalCode_ET"
        tools:ignore="TouchTargetSizeCheck" />

    <EditText
        android:id="@+id/postalCode_ET"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/border"
        android:ems="10"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginTop="12dp"
        android:hint="کد پستی  "
        android:inputType="number"
        android:padding="8dp"
        android:textColorHighlight="#F06292"
        app:layout_constraintEnd_toEndOf="@+id/address_ET"
        app:layout_constraintStart_toStartOf="@+id/address_ET"
        app:layout_constraintTop_toBottomOf="@+id/address_ET"
        tools:ignore="TouchTargetSizeCheck" />

    <EditText
        android:id="@+id/address_ET"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/border"
        android:ems="10"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginTop="12dp"
        android:hint="آدرس "
        android:inputType="textPersonName"
        android:padding="8dp"
        android:textColorHighlight="#F06292"
        app:layout_constraintEnd_toEndOf="@+id/placeOfBirth_ET"
        app:layout_constraintStart_toStartOf="@+id/placeOfBirth_ET"
        app:layout_constraintTop_toBottomOf="@+id/placeOfBirth_ET"
        tools:ignore="TouchTargetSizeCheck" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:text="جنسیت"
        android:textSize="18dp"
        app:layout_constraintEnd_toEndOf="@+id/postalCode_ET"
        app:layout_constraintTop_toBottomOf="@+id/postalCode_ET" />

    <RadioButton
        android:id="@+id/radioButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="0dp"
        android:layout_marginEnd="88dp"
        android:text="زن "
        app:layout_constraintBottom_toTopOf="@+id/button"
        app:layout_constraintEnd_toEndOf="@+id/textView2"
        app:layout_constraintTop_toBottomOf="@+id/textView2"
        app:layout_constraintVertical_bias="0.0" />

    <RadioButton
        android:id="@+id/radioButton2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="96dp"
        android:text="مرد "
        app:layout_constraintBottom_toBottomOf="@+id/radioButton"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/radioButton"
        app:layout_constraintVertical_bias="0.0" />

    <Button
        android:id="@+id/button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="88dp"
        android:layout_marginEnd="16dp"
        android:backgroundTint="#F06292"
        android:text="ثبت اطلاعات "
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/postalCode_ET" />

</androidx.constraintlayout.widget.ConstraintLayout>